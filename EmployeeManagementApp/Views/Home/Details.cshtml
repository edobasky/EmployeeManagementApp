@model HomeDetailsViewModel;

@{
    ViewBag.Title = "Employee List";
    var photoPath = "~/Images/" + (Model.Employee.PhotoPath ?? "noimage.jpg");
}

<div class="row justify-content-center" m-3>
    <div class="col-sm-8 align-content-center">
        <div class="col-md-5 col-xs-6 border-primary">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true">
                <h4>Employee ID : @Model.Employee.Id</h4>
                <h4>Email : @Model.Employee.Email</h4>
                <h4>Employee ID : @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-primary">Back</a>
                <a class="btn btn-primary" asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Employee.Id">Edit</a>
                <a class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>










@section Scripts {

    <script src="~/js/CustomScript.js"></script>
}