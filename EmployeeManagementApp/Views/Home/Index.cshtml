@model IEnumerable<Employee>;

@{
    ViewBag.Title = "Employee List";
}


<div class="row">
    @foreach (var employee in Model)
    {

        var photoPath = "~/Images/" + (employee.PhotoPath ?? "noimage.jpg");
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card" style="max-width: 700px;">
                

                    <div class="col-md-11">
                        <div class="card-body">
                            <div class="card-header">
                                <h3>@employee.Name</h3>
                            </div>
                            <img class="card-img-top imageThumbnail"  width="100%"  src="@photoPath" asp-append-version="true">
                            <div class="card-footer text-center">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
                                <a class="btn btn-primary" asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                                <a class="btn btn-danger">Delete</a>
                            </div>

                        </div>
                    </div>
                   
               
            </div>
        </div>
    }
</div>
